<resources>

	<!-- Base application theme. -->
	<style
		name = "AppTheme"
		parent = "Theme.AppCompat.Light.NoActionBar">

		<!-- Customize your theme here. -->
		<item name = "colorPrimary">@color/colorPrimary</item>
		<item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name = "colorAccent">@color/colorAccent</item>

	</style>

	<!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
	<style name = "AppTheme.Launcher">

		<item name = "android:windowBackground">@drawable/launch_screen</item>
		<!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
		<!-- <item name="colorPrimaryDark">@android:color/white</item> -->

	</style>

	<style name = "RecyclerItemTextView">
		<item name = "android:layout_width">wrap_content</item>
		<item name = "android:layout_height">wrap_content</item>
	</style>

	<style name = "RecyclerItemTextView.CardView">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_margin">10dp</item>
	</style>

	<style name = "RecyclerItemTextView.CardViewContainer">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:padding">10dp</item>
	</style>

	<style name = "RecyclerItemTextView.ValueFlightNumber">
		<item name = "android:maxLength">10</item>
		<item name = "android:maxLines">1</item>
		<item name = "android:textSize">18sp</item>
		<item name = "android:textStyle">bold</item>
	</style>

	<style name = "RecyclerItemTextView.PlaceHolderBlock">
		<item name = "android:textSize">22sp</item>
	</style>

	<style name = "RecyclerItemTextView.ValueMissionName">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxWidth">300dp</item>
		<item name = "android:maxLines">1</item>
		<item name = "android:textSize">24sp</item>
	</style>

	<style name = "RecyclerItemTextView.ValueLaunchDateAndTime">
		<item name = "android:maxLength">25</item>
		<item name = "android:maxLines">1</item>
	</style>

	<style name = "RecyclerItemTextView.ValueBlockNumber">
		<item name = "android:textSize">20sp</item>
		<item name = "android:textStyle">bold</item>
	</style>

</resources>