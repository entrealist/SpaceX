<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:background = "@color/colorWhite"
	android:paddingStart = "10dp"
	android:paddingTop = "10dp"
	android:paddingEnd = "10dp"
	android:paddingBottom = "10dp">

	<ImageView
		android:id = "@+id/navigation_drawer_header_layout_image_view_logo"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:contentDescription = "@string/imcd_space_x_logo"
		app:layout_constraintBottom_toTopOf = "@+id/navigation_drawer_header_layout_text_view_app_title"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintHorizontal_bias = "0"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		app:srcCompat = "@drawable/ic_space_x_logo" />

	<TextView
		android:id = "@+id/navigation_drawer_header_layout_text_view_app_title"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:layout_marginTop = "20dp"
		android:layout_marginBottom = "20dp"
		android:text = "@string/navigation_drawer_header_app_name"
		android:textSize = "24sp"
		android:textStyle = "bold"
		app:layout_constraintBottom_toTopOf = "@+id/navigation_drawer_header_layout_text_view_contributor"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintHorizontal_bias = "0"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/navigation_drawer_header_layout_image_view_logo" />

	<TextView
		android:id = "@+id/navigation_drawer_header_layout_text_view_contributor"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:text = "@string/navigation_drawer_header_contributor"
		android:textSize = "20sp"
		android:textStyle = "italic"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintHorizontal_bias = "0"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toBottomOf = "@+id/navigation_drawer_header_layout_text_view_app_title" />

</androidx.constraintlayout.widget.ConstraintLayout>