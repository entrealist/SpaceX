<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="rocket"
            type="ritwik.samples.spacex.pojo.rockets.Rocket" />

        <variable
            name="expanded"
            type="Boolean" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recycler_item_rocket_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_rocket_guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_rocket_guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_rocket_guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="15dp" />

            <ImageView
                android:id="@+id/recycler_item_rocket_image_view_rocket_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/imcd_rocket"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/recycler_item_rocket_text_view_rocket_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_space_x_logo" />

            <TextView
                android:id="@+id/recycler_item_rocket_text_view_rocket_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{rocket.rocketName}"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/recycler_item_rocket_text_view_rocket_description"
                app:layout_constraintEnd_toStartOf="@+id/recycler_item_rocket_image_view_button_drop"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_rocket_guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_rocket_image_view_rocket_image"
                tools:text="Falcon Heavy" />

            <ImageView
                android:id="@+id/recycler_item_rocket_image_view_button_drop"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:contentDescription="@string/imcd_rocket"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_item_rocket_text_view_rocket_name"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_rocket_guideline_right"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_rocket_text_view_rocket_name"
                app:layout_constraintTop_toTopOf="@+id/recycler_item_rocket_text_view_rocket_name"
                app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

            <TextView
                android:id="@+id/recycler_item_rocket_text_view_rocket_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@{rocket.description}"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="@{expanded?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toTopOf="@+id/recycler_item_rocket_image_view_button_specification"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_rocket_guideline_right"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_rocket_guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_rocket_text_view_rocket_name"
                tools:text="The Falcon 1 was an expendable launch system privately developed and manufactured by SpaceX during 2006-2009. On 28 September 2008, Falcon 1 became the first privately-developed liquid-fuel launch vehicle to go into orbit around the Earth." />

            <TextView
                android:id="@+id/recycler_item_rocket_image_view_button_specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_vehicles"
                android:text="@string/recycler_item_rocket_specifications"
                android:textColor="#FF5722"
                android:visibility="@{expanded?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_item_rocket_guideline_bottom"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_rocket_guideline_right"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_rocket_guideline_left"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_rocket_text_view_rocket_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>