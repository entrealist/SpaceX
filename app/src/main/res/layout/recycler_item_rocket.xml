<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools" >

	<data >

		<variable
			name = "rocket"
			type = "ritwik.samples.spacex.pojo.rockets.Rocket" />

		<variable
			name = "viewModel"
			type = "ritwik.samples.spacex.ui.main.mvvm.MainViewModel" />

	</data >

	<androidx.cardview.widget.CardView
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:cardCornerRadius = "5dp"
		app:cardPreventCornerOverlap = "true"
		app:cardUseCompatPadding = "true" >

		<androidx.constraintlayout.widget.ConstraintLayout
			android:id = "@+id/recycler_item_rocket_card_view_content"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content" >

			<ImageView
				android:id = "@+id/recycler_item_rocket_image_view_rocket_image"
				android:layout_width = "match_parent"
				android:layout_height = "200dp"
				android:contentDescription = "@string/imcd_rocket_image"
				android:scaleType = "centerCrop"
				app:imageURL = "@{ rocket.flickrImages [ 0 ] }"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_rocket_view_second_layer"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toTopOf = "parent"
				tools:src = "@drawable/ic_launcher_background" />

			<View
				android:id = "@+id/recycler_item_rocket_view_second_layer"
				android:layout_width = "match_parent"
				android:layout_height = "40dp"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_rocket_text_view_rocket_description"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_rocket_image_view_rocket_image" />

			<TextView
				android:id = "@+id/recycler_item_rocket_text_view_rocket_name"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginStart = "10dp"
				android:ellipsize = "end"
				android:maxWidth = "360dp"
				android:maxLines = "2"
				android:text = "@{ rocket.rocketName }"
				android:textColor = "@android:color/black"
				android:textSize = "18sp"
				app:layout_constraintBottom_toBottomOf = "@id/recycler_item_rocket_view_second_layer"
				app:layout_constraintEnd_toEndOf = "@id/recycler_item_rocket_view_second_layer"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_rocket_view_second_layer"
				app:layout_constraintTop_toTopOf = "@id/recycler_item_rocket_view_second_layer"
				tools:text = "Some Dummy Title" />

			<View
				android:id = "@+id/recycler_item_rocket_view_image_container"
				android:layout_width = "20dp"
				android:layout_height = "20dp"
				app:layout_constraintBottom_toBottomOf = "@id/recycler_item_rocket_view_second_layer"
				app:layout_constraintEnd_toEndOf = "@id/recycler_item_rocket_view_second_layer"
				app:layout_constraintHorizontal_bias = "1"
				app:layout_constraintStart_toStartOf = "@id/recycler_item_rocket_view_second_layer"
				app:layout_constraintTop_toTopOf = "@id/recycler_item_rocket_view_second_layer" />

			<ImageView
				android:id = "@+id/recycler_item_rocket_image_view_button_more"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:contentDescription = "@string/imcd_more_info"
				app:layout_constraintBottom_toBottomOf = "@id/recycler_item_rocket_view_image_container"
				app:layout_constraintEnd_toEndOf = "@id/recycler_item_rocket_view_image_container"
				app:layout_constraintStart_toStartOf = "@id/recycler_item_rocket_view_image_container"
				app:layout_constraintTop_toTopOf = "@id/recycler_item_rocket_view_image_container"
				app:srcCompat = "@drawable/ic_arrow_drop_down_black_24dp" />

			<TextView
				android:id = "@+id/recycler_item_rocket_text_view_rocket_description"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:layout_marginStart = "10dp"
				android:text = "@{ rocket.description }"
				android:textColor = "@android:color/black"
				android:textSize = "14sp"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_rocket_text_view_button_rocket_specification"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_rocket_view_second_layer"
				tools:text = "Some Dummy Description that shows how the description of a rocket looks like" />

			<TextView
				android:id = "@+id/recycler_item_rocket_text_view_button_rocket_specification"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:layout_marginStart = "10dp"
				android:layout_marginTop = "10dp"
				android:layout_marginBottom = "10dp"
				android:drawableStart = "@drawable/ic_specification"
				android:gravity = "center"
				android:onClick = "@{ () -> viewModel.onRocketSpecsClicked ( rocket ) }"
				android:text = "@string/recycler_item_rocket_text_specs"
				android:textColor = "@android:color/holo_red_light"
				android:textSize = "16sp"
				app:layout_constraintBottom_toBottomOf = "parent"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_rocket_text_view_rocket_description" />

		</androidx.constraintlayout.widget.ConstraintLayout >

	</androidx.cardview.widget.CardView >

</layout >