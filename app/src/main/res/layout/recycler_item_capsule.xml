<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="capsule"
            type="ritwik.samples.spacex.pojo.capsules.Capsule" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_item_capsule_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_capsule_guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_capsule_guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_capsule_guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/recycler_item_capsule_guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_capsule_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{capsule.capsuleName}"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/recycler_item_capsule_text_view_value_capsule_status"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_capsule_guideline_right"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_capsule_guideline_left"
                app:layout_constraintTop_toTopOf="@+id/recycler_item_capsule_guideline_top"
                tools:text="C101 - Dragon 1.0" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_value_capsule_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@{capsule.capsuleStatus}"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@+id/recycler_item_capsule_text_view_value_active_since"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_capsule_guideline_right"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_capsule_text_view_placeholder_capsule_status"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_capsule_text_view_capsule_name"
                tools:text="Active" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_placeholder_capsule_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_item_capsule_status"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_item_capsule_text_view_value_capsule_status"
                app:layout_constraintEnd_toStartOf="@+id/recycler_item_capsule_text_view_value_capsule_status"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_capsule_guideline_left"
                app:layout_constraintTop_toTopOf="@+id/recycler_item_capsule_text_view_value_capsule_status" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_value_active_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@{capsule.activeSince}"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@+id/recycler_item_capsule_text_view_value_missions"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_capsule_guideline_right"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_capsule_text_view_placeholder_active_since"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_capsule_text_view_value_capsule_status"
                tools:text="8 Dec 2019, 21:00" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_placeholder_active_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_item_capsule_active_since"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_item_capsule_text_view_value_active_since"
                app:layout_constraintEnd_toStartOf="@+id/recycler_item_capsule_text_view_value_active_since"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_capsule_guideline_left"
                app:layout_constraintTop_toTopOf="@+id/recycler_item_capsule_text_view_value_active_since" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_value_missions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@{capsule.missionCount}"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_item_capsule_guideline_bottom"
                app:layout_constraintEnd_toEndOf="@+id/recycler_item_capsule_guideline_right"
                app:layout_constraintStart_toEndOf="@+id/recycler_item_capsule_text_view_placeholder_missions"
                app:layout_constraintTop_toBottomOf="@+id/recycler_item_capsule_text_view_value_active_since"
                tools:text="1" />

            <TextView
                android:id="@+id/recycler_item_capsule_text_view_placeholder_missions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_item_capsule_missions"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/recycler_item_capsule_text_view_value_missions"
                app:layout_constraintEnd_toStartOf="@+id/recycler_item_capsule_text_view_value_missions"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/recycler_item_capsule_guideline_left"
                app:layout_constraintTop_toTopOf="@+id/recycler_item_capsule_text_view_value_missions" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>