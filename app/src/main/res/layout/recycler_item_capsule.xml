<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools" >

	<data >

		<variable
			name = "capsule"
			type = "ritwik.samples.spacex.pojo.capsules.Capsule" />

		<variable
			name = "viewModel"
			type = "ritwik.samples.spacex.ui.main.mvvm.MainViewModel" />

	</data >

	<androidx.cardview.widget.CardView
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		app:cardCornerRadius = "5dp"
		app:cardPreventCornerOverlap = "true"
		app:cardUseCompatPadding = "true" >

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content" >

			<View
				android:id = "@+id/recycler_item_capsule_bound_capsule_name"
				android:layout_width = "match_parent"
				android:layout_height = "40dp"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toTopOf = "parent" />

			<View
				android:id = "@+id/recycler_item_capsule_bound_capsule_status"
				android:layout_width = "match_parent"
				android:layout_height = "30dp"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_name" />

			<View
				android:id = "@+id/recycler_item_capsule_bound_capsule_active_since"
				android:layout_width = "match_parent"
				android:layout_height = "30dp"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_status" />

			<View
				android:id = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				android:layout_width = "match_parent"
				android:layout_height = "30dp"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_capsule_bound_capsule_specifications"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_active_since" />

			<View
				android:id = "@+id/recycler_item_capsule_bound_capsule_specifications"
				android:layout_width = "match_parent"
				android:layout_height = "40dp"
				app:layout_constraintBottom_toBottomOf = "parent"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_mission_count" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_capsule_name"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@{ capsule.capsuleSerial + ` - ` + capsule.type }"
				android:textColor = "@android:color/black"
				android:textSize = "24sp"
				app:layout_constraintBottom_toBottomOf = "@id/recycler_item_capsule_bound_capsule_name"
				app:layout_constraintEnd_toEndOf = "@id/recycler_item_capsule_bound_capsule_name"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "@id/recycler_item_capsule_bound_capsule_name"
				app:layout_constraintTop_toTopOf = "@id/recycler_item_capsule_bound_capsule_name"
				tools:text = "C101 - Dragon 1.0" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_placeholder_status"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/recycler_item_capsule_text_status"
				android:textColor = "@android:color/black"
				app:layout_constraintBottom_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintEnd_toEndOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintTop_toTopOf = "@+id/recycler_item_capsule_bound_capsule_status" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_value_status"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:maxWidth = "300dp"
				android:maxLines = "1"
				android:text = "@{ capsule.status.toUpperCase () }"
				android:textColor = "@android:color/black"
				app:layout_constraintBottom_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintEnd_toEndOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintHorizontal_bias = "1"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_capsule_bound_capsule_status"
				app:layout_constraintTop_toTopOf = "@+id/recycler_item_capsule_bound_capsule_status"
				tools:text = "Retired" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_placeholder_active_since"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/recycler_item_capsule_text_active_since"
				android:textColor = "@android:color/black"
				app:layout_constraintBottom_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintEnd_toEndOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintTop_toTopOf = "@+id/recycler_item_capsule_bound_capsule_active_since" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_value_active_since"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:maxWidth = "300dp"
				android:maxLines = "1"
				android:text = "@{ viewModel.convertDateTime ( capsule.launchTimeUTC ) }"
				android:textColor = "@android:color/black"
				app:layout_constraintBottom_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintEnd_toEndOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintHorizontal_bias = "1"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				app:layout_constraintTop_toTopOf = "@+id/recycler_item_capsule_bound_capsule_active_since"
				tools:text = "8 Dec 2010 - 21:13" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_placeholder_mission_count"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:text = "@string/recycler_item_capsule_text_missions"
				android:textColor = "@android:color/black"
				app:layout_constraintBottom_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintEnd_toEndOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintTop_toTopOf = "@+id/recycler_item_capsule_bound_capsule_mission_count" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_value_mission_count"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:maxWidth = "300dp"
				android:maxLines = "1"
				android:text = "@{ String.valueOf ( capsule.missions.size () ) }"
				android:textColor = "@android:color/black"
				app:layout_constraintBottom_toBottomOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintEnd_toEndOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintHorizontal_bias = "1"
				app:layout_constraintStart_toStartOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				app:layout_constraintTop_toTopOf = "@+id/recycler_item_capsule_bound_capsule_mission_count"
				tools:text = "1" />

			<TextView
				android:id = "@+id/recycler_item_capsule_text_view_button_show_capsule"
				android:layout_width = "wrap_content"
				android:layout_height = "wrap_content"
				android:drawableStart = "@drawable/ic_space_capsule"
				android:drawablePadding = "10dp"
				android:text = "@string/recycler_item_capsule_text_specs"
				android:textColor = "@android:color/holo_red_light"
				android:onClick = "@{ () -> viewModel.onCapsuleSpecsClicked ( capsule ) }"
				app:layout_constraintBottom_toBottomOf = "@id/recycler_item_capsule_bound_capsule_specifications"
				app:layout_constraintEnd_toEndOf = "@id/recycler_item_capsule_bound_capsule_specifications"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "@id/recycler_item_capsule_bound_capsule_specifications"
				app:layout_constraintTop_toTopOf = "@id/recycler_item_capsule_bound_capsule_specifications" />

		</androidx.constraintlayout.widget.ConstraintLayout >

	</androidx.cardview.widget.CardView >

</layout >