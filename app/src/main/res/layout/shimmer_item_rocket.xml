<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/shimmer_card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="10dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="10dp" />

        <ImageView
            android:id="@+id/value_image_rocket"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/imcd_shimmer_view"
            android:src="@drawable/shimmer_rectangle_grey"
            app:layout_constraintBottom_toTopOf="@id/value_text_rocket_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <ImageView
            android:id="@+id/value_text_rocket_name"
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/imcd_shimmer_view"
            android:src="@drawable/shimmer_rounded_rectangle_grey"
            app:layout_constraintBottom_toTopOf="@id/value_text_rocket_summary"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/value_image_rocket" />

        <ImageView
            android:id="@+id/value_text_rocket_summary"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:contentDescription="@string/imcd_shimmer_view"
            android:src="@drawable/shimmer_rounded_rectangle_grey"
            app:layout_constraintBottom_toTopOf="@id/button_rocket_specs"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/value_text_rocket_name" />

        <ImageView
            android:id="@+id/button_rocket_specs"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/imcd_shimmer_view"
            android:src="@drawable/shimmer_rounded_rectangle_grey"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/value_text_rocket_summary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
