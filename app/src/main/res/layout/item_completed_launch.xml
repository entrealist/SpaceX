<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="launch"
            type="ritwik.samples.spacex.data.ui.Launch" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/item_upcoming_launch_card_background_color"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="10dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="10dp" />

            <TextView
                android:id="@+id/value_text_mission_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@{launch.missionNumberText}"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/value_text_mission_name"
                app:layout_constraintEnd_toStartOf="@id/placeholder_text_block"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toTopOf="@id/guideline_top"
                tools:text="#1" />

            <TextView
                android:id="@+id/value_text_mission_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{launch.missionName}"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@id/placeholder_text_block"
                app:layout_constraintBottom_toTopOf="@id/value_text_mission_date_time"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/value_text_mission_number"
                tools:text="SPF-12" />

            <TextView
                android:id="@+id/value_text_mission_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{launch.missionDateTime}"
                android:textColor="@color/color_text"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
                app:layout_constraintEnd_toStartOf="@id/value_text_block"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/value_text_mission_name"
                tools:text="01 Jan, 2020 : 09:00 PM" />

            <TextView
                android:id="@+id/placeholder_text_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_block"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/value_text_block"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toEndOf="@id/value_text_mission_number"
                app:layout_constraintTop_toTopOf="@id/guideline_top" />

            <TextView
                android:id="@+id/value_text_block"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@{launch.blockNumberText}"
                android:textColor="@color/color_text"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/value_text_mission_date_time"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toEndOf="@id/value_text_mission_date_time"
                app:layout_constraintTop_toBottomOf="@id/placeholder_text_block"
                tools:text="10" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
