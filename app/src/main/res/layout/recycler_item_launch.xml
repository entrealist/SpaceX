<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto">

	<data>

		<variable
			name = "launch"
			type = "ritwik.samples.spacex.pojo.launches.Launch" />

		<variable
			name = "viewModel"
			type = "ritwik.samples.spacex.ui.main.mvvm.MainViewModel" />

	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:background = "@color/colorWhite"
		android:onClick = "@{ () -> viewModel.onLaunchClicked ( launch ) }">

		<androidx.cardview.widget.CardView
			android:id = "@+id/recycler_item_launch_card_view"
			style = "@style/CustomCards.LaunchMissions"
			app:cardBackgroundColor = "#9ED2FF"
			app:cardCornerRadius = "5dp"
			app:layout_constraintBottom_toBottomOf = "parent"
			app:layout_constraintEnd_toEndOf = "parent"
			app:layout_constraintStart_toStartOf = "parent"
			app:layout_constraintTop_toTopOf = "parent">

			<androidx.constraintlayout.widget.ConstraintLayout
				style = "@style/CustomCards.LaunchMissionsContainer">

				<TextView
					android:id = "@+id/recycler_item_launch_text_view_value_flight_number"
					style = "@style/TextViewStyleCustom.ValueFlightNumber"
					android:text = "@{ String.valueOf ( launch.flightNumber ) }"
					app:layout_constraintBottom_toTopOf = "@+id/recycler_item_launch_text_view_value_mission_name"
					app:layout_constraintEnd_toStartOf = "@+id/recycler_item_launch_text_view_placeholder_block"
					app:layout_constraintHorizontal_bias = "0"
					app:layout_constraintHorizontal_chainStyle = "spread_inside"
					app:layout_constraintStart_toStartOf = "parent"
					app:layout_constraintTop_toTopOf = "parent" />

				<TextView
					android:id = "@+id/recycler_item_launch_text_view_placeholder_block"
					style = "@style/TextViewStyleCustom.PlaceHolderBlock"
					android:text = "@string/recycler_item_launch_text_block"
					app:layout_constraintBottom_toTopOf = "@+id/recycler_item_launch_text_view_value_block_number"
					app:layout_constraintEnd_toEndOf = "parent"
					app:layout_constraintHorizontal_bias = "1"
					app:layout_constraintStart_toEndOf = "@+id/recycler_item_launch_text_view_value_flight_number"
					app:layout_constraintTop_toTopOf = "parent"
					app:layout_constraintVertical_bias = "0"
					app:layout_constraintVertical_chainStyle = "spread_inside" />

				<TextView
					android:id = "@+id/recycler_item_launch_text_view_value_mission_name"
					style = "@style/TextViewStyleCustom.ValueMissionName"
					android:text = "@{ launch.missionName }"
					app:layout_constraintBottom_toTopOf = "@+id/recycler_item_launch_text_view_value_launch_date_and_time"
					app:layout_constraintEnd_toEndOf = "parent"
					app:layout_constraintHorizontal_bias = "0"
					app:layout_constraintStart_toStartOf = "parent"
					app:layout_constraintTop_toBottomOf = "@+id/recycler_item_launch_text_view_value_flight_number" />

				<TextView
					android:id = "@+id/recycler_item_launch_text_view_value_launch_date_and_time"
					style = "@style/TextViewStyleCustom.ValueLaunchDateAndTime"
					android:text = "@{ viewModel.getDateTime( launch.launchDateUTC ) }"
					app:layout_constraintBottom_toBottomOf = "parent"
					app:layout_constraintEnd_toEndOf = "parent"
					app:layout_constraintHorizontal_bias = "0"
					app:layout_constraintStart_toStartOf = "parent"
					app:layout_constraintTop_toBottomOf = "@+id/recycler_item_launch_text_view_value_mission_name" />

				<TextView
					android:id = "@+id/recycler_item_launch_text_view_value_block_number"
					style = "@style/TextViewStyleCustom.ValueBlockNumber"
					android:text = "@{ String.valueOf ( launch.rocket.firstStage.cores.get(0).block ) }"
					app:layout_constraintBottom_toBottomOf = "parent"
					app:layout_constraintEnd_toEndOf = "parent"
					app:layout_constraintHorizontal_bias = "1"
					app:layout_constraintStart_toStartOf = "parent"
					app:layout_constraintTop_toBottomOf = "@id/recycler_item_launch_text_view_placeholder_block"
					app:layout_constraintVertical_bias = "0" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</androidx.cardview.widget.CardView>

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>