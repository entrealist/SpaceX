<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	android:layout_width = "match_parent"
	android:layout_height = "wrap_content"
	android:background = "@color/colorWhite">

	<androidx.cardview.widget.CardView
		android:id = "@+id/recycler_item_launch_card_view"
		style = "@style/RecyclerItemTextView.CardView"
		app:cardBackgroundColor = "#9ED2FF"
		app:cardCornerRadius = "5dp"
		app:layout_constraintBottom_toBottomOf = "parent"
		app:layout_constraintEnd_toEndOf = "parent"
		app:layout_constraintStart_toStartOf = "parent"
		app:layout_constraintTop_toTopOf = "parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			style = "@style/RecyclerItemTextView.CardViewContainer">

			<TextView
				android:id = "@+id/recycler_item_launch_text_view_value_flight_number"
				style = "@style/RecyclerItemTextView.ValueFlightNumber"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_launch_text_view_value_mission_name"
				app:layout_constraintEnd_toStartOf = "@+id/recycler_item_launch_text_view_placeholder_block"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintHorizontal_chainStyle = "spread_inside"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toTopOf = "parent" />

			<TextView
				android:id = "@+id/recycler_item_launch_text_view_placeholder_block"
				style = "@style/RecyclerItemTextView.PlaceHolderBlock"
				android:text = "@string/recycler_item_launch_text_block"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_launch_text_view_value_block_number"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintHorizontal_bias = "1"
				app:layout_constraintStart_toEndOf = "@+id/recycler_item_launch_text_view_value_flight_number"
				app:layout_constraintTop_toTopOf = "parent"
				app:layout_constraintVertical_bias = "0"
				app:layout_constraintVertical_chainStyle = "spread_inside" />

			<TextView
				android:id = "@+id/recycler_item_launch_text_view_value_mission_name"
				style = "@style/RecyclerItemTextView.ValueMissionName"
				app:layout_constraintBottom_toTopOf = "@+id/recycler_item_launch_text_view_value_launch_date_and_time"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_launch_text_view_value_flight_number" />

			<TextView
				android:id = "@+id/recycler_item_launch_text_view_value_launch_date_and_time"
				style = "@style/RecyclerItemTextView.ValueLaunchDateAndTime"
				app:layout_constraintBottom_toBottomOf = "parent"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintHorizontal_bias = "0"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@+id/recycler_item_launch_text_view_value_mission_name" />

			<TextView
				android:id = "@+id/recycler_item_launch_text_view_value_block_number"
				style = "@style/RecyclerItemTextView.ValueBlockNumber"
				app:layout_constraintBottom_toBottomOf = "parent"
				app:layout_constraintEnd_toEndOf = "parent"
				app:layout_constraintHorizontal_bias = "1"
				app:layout_constraintStart_toStartOf = "parent"
				app:layout_constraintTop_toBottomOf = "@id/recycler_item_launch_text_view_placeholder_block"
				app:layout_constraintVertical_bias = "0" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>